extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{project.name}

        p.lead.text-light
          | #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in project.technologies
            li= technology

        a.button.expanded(href=`${project.liveLink}` target="blank") Live Demo
        a.button.expanded(href=`${project.githubLink}` target="blank") GitHub Repo
    
    img.image(src=`${baseUrl}/${project.imageUrls[0]}`)
    